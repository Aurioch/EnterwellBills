@model EnterwellBills.Models.Faktura

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Faktura</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Stvaratelj)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stvaratelj)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Primatelj)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Primatelj)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatumStvaranja)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumStvaranja)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatumDospijeca)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumDospijeca)
        </dd>

        <dt>
            Stavke fakture
        </dt>

        <dd>
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <td>Opis</td>
                        <td>Jedinična cijena</td>
                        <td>Količina</td>
                        <td>Ukupna cijena</td>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Stavke)
                {
                    <tr>
                        <td>@item.Opis</td>
                        <td>@item.JedinicnaCijena</td>
                        <td>@item.Kolicina</td>
                        <td>@item.UkupnaCijena</td>
                    </tr>
                }
                </tbody>
            </table>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cijena)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PDV)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PDV)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CijenaSaPDV)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CijenaSaPDV)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Bills", "HomeController", new { @class = "btn btn-default" })
</p>
